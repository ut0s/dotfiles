# path setting
# PATH=$PATH:$HOME/bin:
# PATH=$PATH:$HOME/usr/bin/:
# PATH=$PATH:$HOME/.local/bin:
# PATH=$PATH:/usr/local/cuda/bin:
# export PATH
export PATH=${PATH}:$HOME/bin:$HOME/usr/bin/:$HOME/usr/local/bin/:$HOME/.local/bin:/usr/local/cuda/bin

#python path setting
